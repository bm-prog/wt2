<form class="ui stacked segment form" action="/station/{{station.id}}/addreading" method="POST">
  <div class="two fields">
    <div class="field">
      <label>Title</label>
      <input placeholder="Name" type="text" name="name">
    </div>
    <div class="field">
      <label>Artist</label>
      <input placeholder="Temperature" type="text" name="temperature">
    </div>
    <div class="field">
      <label>Duration</label>
      <input placeholder="00" type="number" name="duration">
    </div>
  </div>
  <button class="big ui inverted green button">Add Reading</button>
</form>
