<form class="ui stacked segment form" action="/station/{{station.id}}/addreading" method="POST">
  <div class="five fields">
    <div class="field">
      <label>Code</label>
      <input placeholder="000" type="text" name="name">
    </div>
    <div class="field">
      <label>Temperature</label>
      <input placeholder="00" type="text" name="temperature">
    </div>
    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="00" type="number" name="windSpeed">
    </div>
    <div class="field">
      <label>Pressure</label>
      <input placeholder="00" type="number" name="pressure">
    </div>
    <div class="field">
      <label>Wind Direction</label>
      <input placeholder="00" type="number" name="windDirection">
    </div>
  </div>
  <button class="big ui inverted green button">Add Reading</button>
</form>
