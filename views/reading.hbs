{{> menu}}

<form class="ui stacked segment form" action="/reading/{{station.id}}/updatereading/{{reading.id}}" method="POST">
  <div class="two fields">
    <div class="field">
      <label>Code</label>
      <input placeholder="00" type="text" name="code" value="{{reading.code}}">
    </div>
    <div class="field">
      <label>Temperature</label>
      <input placeholder="00" type="text" name="temperature" value="{{reading.temperature}}">
    </div>
    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="00" type="number" name="code" value="{{reading.windSpeed}}">
    </div>
    <div class="field">
      <label>Pressure</label>
      <input placeholder="00" type="number" name="code" value="{{reading.pressure}}">
    </div>
    <div class="field">
      <label>Wind Direction</label>
      <input placeholder="00" type="number" name="code" value="{{reading.windDirection}}">
    </div>
  </div>
  <button class="big ui inverted green button">Update Reading</button>
</form>
